{#
 # @prop {string} label
 # @prop {boolean} [primary=false]
 # @prop {string} [size="medium"]
 #}
{% macro render( props ) %}
{%- set mode = "primary" if props.primary else "secondary" -%}
<button
    class="uos-button uos-button--{{ props.size }} uos-button--{{ mode }}"
>
    {{ props.label }}
</button>
{% endmacro %}

